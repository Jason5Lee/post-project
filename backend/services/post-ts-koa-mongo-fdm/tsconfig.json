{
    "compilerOptions": {
        "lib": ["ES2017"],
        "module": "commonjs",
        "target": "ES2017",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["src/**/*"]
}
